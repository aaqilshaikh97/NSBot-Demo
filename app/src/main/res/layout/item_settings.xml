<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="@dimen/space_m"
    app:cardCornerRadius="@dimen/space_m"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="@dimen/space_l"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon"
            android:textSize="@dimen/text_n"
            android:src="@drawable/ic_baseline_share_24"
            android:textColor="@color/textPrimary"
            android:layout_width="@dimen/size_n"
            android:layout_height="@dimen/size_n"/>

        <TextView
            android:id="@+id/name"
            android:layout_marginStart="@dimen/space_l"
            android:textSize="@dimen/text_h"
            android:text="@string/app_name"
            android:textColor="@color/textPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>